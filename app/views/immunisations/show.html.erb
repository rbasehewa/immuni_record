<div class="mb-3">
  <%= link_to "Back", immunisations_path, class: "btn btn-outline-secondary btn-sm" %>
</div>

<div class="card mb-3">
  <div class="card-body">
    <h2 class="h4 fw-semibold mb-3">Immunisation</h2>

    <p class="mb-2">
      <span class="fw-semibold">Patient:</span>
      <%= [@immunisation.patient&.first_name, @immunisation.patient&.last_name].compact.join(" ") %>
    </p>
    <p class="mb-2">
      <span class="fw-semibold">Vaccine:</span>
      <%= @immunisation.vaccine&.name %>
    </p>
    <p class="mb-2">
      <span class="fw-semibold">Administered on:</span>
      <%= @immunisation.administered_on %>
    </p>
    <p class="mb-2">
      <span class="fw-semibold">Administered by:</span>
      <%= @immunisation.administered_by %>
    </p>
    <p class="mb-2">
      <span class="fw-semibold">Batch #:</span>
      <%= @immunisation.batch_number %>
    </p>
    <p class="mb-0">
      <span class="fw-semibold">Next due:</span>
      <%= @immunisation.next_due_date %>
    </p>
  </div>
</div>

<div class="d-flex flex-wrap gap-2">
  <%= link_to "Edit", edit_immunisation_path(@immunisation), class: "btn btn-secondary" %>
  <%= link_to "Delete", @immunisation,
        data: { turbo_method: :delete, turbo_confirm: "Delete this immunisation?" },
        class: "btn btn-danger" %>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>ImmuniRecord</title>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body class="bg-gray-50 text-gray-900">
    <nav class="bg-white border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center gap-6">
        <%= link_to "Dashboard", root_path, class: "text-xl font-semibold" %>
        <div class="flex items-center gap-4 text-sm">
          <%= link_to "Patients", patients_path, class: "hover:text-blue-600" %>
          <%= link_to "Vaccines", vaccines_path, class: "hover:text-blue-600" %>
          <%= link_to "Immunisations", immunisations_path, class: "hover:text-blue-600" %>
        </div>
      </div>
    </nav>

    <!-- centered content area -->
<main class="min-h-[calc(100vh-56px)] flex justify-center">
  <!-- Central page container -->
  <div class="w-full <%= content_for?(:container_width) ? yield(:container_width) : 'max-w-3xl' %> px-4 py-8">
    <% if notice %>
      <p class="mb-4 rounded-md bg-green-50 text-green-800 px-4 py-2"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="mb-4 rounded-md bg-red-50 text-red-800 px-4 py-2"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>
</main>

  </body>
</html>

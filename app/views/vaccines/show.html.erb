<div class="mb-3">
  <%= link_to "Back", vaccines_path, class: "btn btn-outline-secondary btn-sm" %>
</div>

<div class="card mb-3">
  <div class="card-body">
    <h2 class="h4 fw-semibold mb-3"><%= @vaccine.name %></h2>

    <p class="mb-2"><span class="fw-semibold">Manufacturer:</span> <%= @vaccine.manufacturer %></p>
    <p class="mb-2"><span class="fw-semibold">Dose #:</span> <%= @vaccine.dose_number %></p>
    <p class="mb-0"><span class="fw-semibold">Interval (days):</span> <%= @vaccine.schedule_interval %></p>
  </div>
</div>

<div class="d-flex flex-wrap gap-2">
  <%= link_to "Edit", edit_vaccine_path(@vaccine), class: "btn btn-secondary" %>
  <%= link_to "Delete", @vaccine,
        data: { turbo_method: :delete, turbo_confirm: "Delete this vaccine?" },
        class: "btn btn-danger" %>
</div>

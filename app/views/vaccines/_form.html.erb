<%= form_with(model: vaccine, local: true, class: "card") do |f| %>
  <div class="card-body">
    <% if vaccine.errors.any? %>
      <div class="alert alert-danger">
        <p class="fw-semibold mb-2"><%= pluralize(vaccine.errors.count, "error") %> prevented saving:</p>
        <ul class="mb-0 ps-3">
          <% vaccine.errors.full_messages.each { |m| %><li><%= m %></li><% } %>
        </ul>
      </div>
    <% end %>

    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :manufacturer, class: "form-label" %>
        <%= f.text_field :manufacturer, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :dose_number, "Dose number", class: "form-label" %>
        <%= f.number_field :dose_number, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :schedule_interval, "Interval (days)", class: "form-label" %>
        <%= f.number_field :schedule_interval, class: "form-control" %>
      </div>
    </div>
  </div>

<div class="card-footer d-flex justify-content-end gap-2">
  <%= link_to "Cancel",
              (vaccine.persisted? ? vaccine_path(vaccine) : vaccines_path),
              class: "btn btn-outline-secondary" %>
  <%= f.submit (vaccine.persisted? ? "Save changes" : "Create Vaccine"),
              class: "btn btn-primary" %>
</div>

<% end %>

<h1 class="display-6 fw-semibold mb-3">Vaccines</h1>

<div class="mb-3">
  <%= link_to "New vaccine", new_vaccine_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead class="table-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Manufacturer</th>
        <th scope="col">Dose #</th>
        <th scope="col">Interval (days)</th>
        <th scope="col" class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @vaccines.each do |v| %>
        <tr>
          <td><%= v.name %></td>
          <td><%= v.manufacturer %></td>
          <td><%= v.dose_number %></td>
          <td><%= v.schedule_interval %></td>
          <td class="text-end">
            <%= link_to "Show", v, class: "btn btn-primary btn-sm me-2" %>
            <%= link_to "Edit", edit_vaccine_path(v), class: "btn btn-outline-secondary btn-sm me-2" %>
            <%= button_to "Delete", v,
              method: :delete,
              data: { turbo_confirm: "Delete this vaccine?" },
              form: { class: "d-inline" },
              class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1 class="text-2xl font-semibold mb-4">Immunisations</h1>

<div class="mb-4">
  <%= link_to "New immunisation", new_immunisation_path,
      class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
</div>

<% if @immunisations.any? %>
  <div class="overflow-x-auto rounded-lg border border-gray-200 bg-white">
    <table class="min-w-full text-sm">
      <thead class="bg-gray-50 text-left">
        <tr>
          <th class="px-4 py-2">Patient</th>
          <th class="px-4 py-2">Vaccine</th>
          <th class="px-4 py-2">Administered on</th>
          <th class="px-4 py-2">Batch #</th>
          <th class="px-4 py-2">Next due</th>
          <th class="px-4 py-2 text-right"></th>
        </tr>
      </thead>
      <tbody>
        <% @immunisations.includes(:patient, :vaccine).each do |im| %>
          <tr class="border-t border-gray-100 hover:bg-gray-50">
            <td class="px-4 py-2"><%= [im.patient&.first_name, im.patient&.last_name].compact.join(" ") %></td>
            <td class="px-4 py-2"><%= im.vaccine&.name %></td>
            <td class="px-4 py-2"><%= im.administered_on %></td>
            <td class="px-4 py-2"><%= im.batch_number %></td>
            <td class="px-4 py-2"><%= im.next_due_date %></td>
            <td class="px-4 py-2 text-right">
              <%= link_to "Show", im, class: "text-blue-600 hover:underline mr-3" %>
              <%= link_to "Edit", edit_immunisation_path(im), class: "text-gray-700 hover:underline mr-3" %>
              <%= button_to "Delete", im, method: :delete, data: { confirm: "Delete this immunisation?" },
                    class: "text-red-600 hover:underline bg-transparent p-0 inline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-600">No immunisations found.</p>
<% end %>

<h1 class="text-2xl font-semibold mb-4">Patients</h1>

<div class="mb-4">
  <%= link_to "New patient", new_patient_path, class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
</div>

<% if @patients.any? %>
  <div class="overflow-x-auto rounded-lg border border-gray-200 bg-white">
    <table class="min-w-full text-sm">
      <thead class="bg-gray-50 text-left">
        <tr>
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">DOB</th>
          <th class="px-4 py-2">Medicare</th>
          <th class="px-4 py-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each do |p| %>
          <tr class="border-t border-gray-100 hover:bg-gray-50">
            <td class="px-4 py-2"><%= "#{p.first_name} #{p.last_name}" %></td>
            <td class="px-4 py-2"><%= p.date_of_birth %></td>
            <td class="px-4 py-2"><%= p.medicare_number %></td>
            <td class="px-4 py-2 text-right">
              <%= link_to "Show", p, class: "text-blue-600 hover:underline mr-3" %>
              <%= link_to "Edit", edit_patient_path(p), class: "text-gray-700 hover:underline mr-3" %>
              <%= button_to "Delete", p, method: :delete, data: { confirm: "Delete this patient?" }, class: "text-red-600 hover:underline bg-transparent p-0 inline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-600">No patients found.</p>
<% end %>

<div class="mb-4">
  <%= link_to "Back", vaccines_path, class: "text-sm text-gray-600 hover:underline" %>
</div>

<div class="rounded-lg border border-gray-200 bg-white p-4 space-y-2">
  <h2 class="text-xl font-semibold"><%= @vaccine.name %></h2>
  <p><span class="font-medium">Manufacturer:</span> <%= @vaccine.manufacturer %></p>
  <p><span class="font-medium">Dose #:</span> <%= @vaccine.dose_number %></p>
  <p><span class="font-medium">Interval (days):</span> <%= @vaccine.schedule_interval %></p>
</div>

<div class="mt-4 flex gap-2">
  <%= link_to "Edit", edit_vaccine_path(@vaccine), class: "rounded-md border px-4 py-2 hover:bg-gray-50" %>
  <%= button_to "Delete", @vaccine, method: :delete, data: {confirm: "Delete this vaccine?"}, class: "rounded-md border px-4 py-2 text-red-600 hover:bg-red-50" %>
</div>

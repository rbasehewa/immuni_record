<% content_for :title, "Showing patient" %>

<div class="container">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <h1 class="display-6 fw-semibold mb-4">Showing patient</h1>

  <div class="card mb-3">
    <div class="card-body">
      <%= render @patient %>
    </div>
  </div>

  <div class="d-flex flex-wrap gap-2">
    <%= link_to "Edit this patient", edit_patient_path(@patient), class: "btn btn-secondary" %>
    <%= link_to "Back to patients", patients_path, class: "btn btn-outline-secondary" %>

    <%= link_to "Destroy this patient", @patient,
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "btn btn-danger" %>
    <!-- If you prefer a real <form><button>, swap to this:
    <%= button_to "Destroy this patient", @patient,
          method: :delete,
          form: { class: "d-inline" },
          data: { turbo_confirm: "Are you sure?" },
          class: "btn btn-danger" %>
    -->
  </div>
</div>

<h1 class="text-2xl font-semibold mb-4">Vaccines</h1>

<div class="mb-4">
  <%= link_to "New vaccine", new_vaccine_path,
      class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
</div>

<% if @vaccines.any? %>
  <div class="overflow-x-auto rounded-lg border border-gray-200 bg-white">
    <table class="min-w-full text-sm">
      <thead class="bg-gray-50 text-left">
        <tr>
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Manufacturer</th>
          <th class="px-4 py-2">Dose #</th>
          <th class="px-4 py-2">Interval (days)</th>
          <th class="px-4 py-2 text-right"></th>
        </tr>
      </thead>
      <tbody>
        <% @vaccines.each do |v| %>
          <tr class="border-t border-gray-100 hover:bg-gray-50">
            <td class="px-4 py-2"><%= v.name %></td>
            <td class="px-4 py-2"><%= v.manufacturer %></td>
            <td class="px-4 py-2"><%= v.dose_number %></td>
            <td class="px-4 py-2"><%= v.schedule_interval %></td>
            <td class="px-4 py-2 text-right">
              <%= link_to "Show", v, class: "text-blue-600 hover:underline mr-3" %>
              <%= link_to "Edit", edit_vaccine_path(v), class: "text-gray-700 hover:underline mr-3" %>
              <%= button_to "Delete", v, method: :delete,
                    data: { confirm: "Delete this vaccine?" },
                    class: "text-red-600 hover:underline bg-transparent p-0 inline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-600">No vaccines found.</p>
<% end %>

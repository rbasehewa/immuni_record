<div class="mb-4">
  <%= link_to "Back", immunisations_path, class: "text-sm text-gray-600 hover:underline" %>
</div>

<div class="rounded-lg border border-gray-200 bg-white p-4 space-y-2">
  <h2 class="text-xl font-semibold">Immunisation</h2>
  <p><span class="font-medium">Patient:</span> <%= [@immunisation.patient&.first_name, @immunisation.patient&.last_name].compact.join(" ") %></p>
  <p><span class="font-medium">Vaccine:</span> <%= @immunisation.vaccine&.name %></p>
  <p><span class="font-medium">Administered on:</span> <%= @immunisation.administered_on %></p>
  <p><span class="font-medium">Administered by:</span> <%= @immunisation.administered_by %></p>
  <p><span class="font-medium">Batch #:</span> <%= @immunisation.batch_number %></p>
  <p><span class="font-medium">Next due:</span> <%= @immunisation.next_due_date %></p>
</div>

<div class="mt-4 flex gap-2">
  <%= link_to "Edit", edit_immunisation_path(@immunisation), class: "rounded-md border px-4 py-2 hover:bg-gray-50" %>
  <%= button_to "Delete", @immunisation, method: :delete, data: {confirm: "Delete this immunisation?"},
        class: "rounded-md border px-4 py-2 text-red-600 hover:bg-red-50" %>
</div>

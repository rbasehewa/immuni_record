<%= form_with(model: patient, local: true, class: "card") do |f| %>
  <div class="card-body">

    <% if patient.errors.any? %>
      <div class="alert alert-danger">
        <h2 class="h6 mb-2"><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
        <ul class="mb-0">
          <% patient.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :date_of_birth, class: "form-label" %>
      <%= f.date_field :date_of_birth, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :medicare_number, class: "form-label" %>
      <%= f.text_field :medicare_number, class: "form-control" %>
    </div>

  </div>
  <div class="card-footer d-flex justify-content-end gap-2">
    <%= link_to "Cancel", patients_path, class: "btn btn-outline-secondary" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

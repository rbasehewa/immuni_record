<h1 class="display-6 fw-semibold mb-3">Immunisations</h1>

<div class="mb-3">
  <%= link_to "New immunisation", new_immunisation_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead class="table-light">
      <tr>
        <th scope="col">Patient</th>
        <th scope="col">Vaccine</th>
        <th scope="col">Administered on</th>
        <th scope="col">Batch #</th>
        <th scope="col">Next due</th>
        <th scope="col" class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @immunisations.includes(:patient, :vaccine).each do |im| %>
        <tr>
          <td><%= [im.patient&.first_name, im.patient&.last_name].compact.join(" ") %></td>
          <td><%= im.vaccine&.name %></td>
          <td><%= im.administered_on %></td>
          <td><%= im.batch_number %></td>
          <td><%= im.next_due_date %></td>
          <td class="text-end">
            <%= link_to "Show", im, class: "btn btn-primary btn-sm me-2" %>
            <%= link_to "Edit", edit_immunisation_path(im), class: "btn btn-outline-secondary btn-sm me-2" %>
            <%= button_to "Delete", im,
            method: :delete,
            data: { turbo_confirm: "Delete this immunisation?" },
            form: { class: "d-inline" },
            class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
